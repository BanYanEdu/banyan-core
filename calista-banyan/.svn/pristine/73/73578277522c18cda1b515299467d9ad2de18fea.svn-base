/**
 * CandidateProfilePersonalInfoUpdateDS.
 *
 * @author Duy Tan Nguyen
 * @version $Id: CandidateProfilePersonalInfoUpdateDS.java Feb 15, 2019 11:50:48 AM nguyen_dv $
 *
 * @since 1.0
 */
@Named("jobportalcandidateprofileupdatepersonalinfo")
@XPortalDataService(roles = {WebConstant.ROLE_USER}, description="Candidate Profile Personal Info Update Data Service")
@XPortalPageRequest(uri="jobportal/candidate/profile/personalinfo/update",
        //transaction = true,
        inherit = true,
        result = WebConstant.ACTION_XSTREAM_JSON_RESULT)
public class CandidateProfilePersonalInfoUpdateDS extends JobPortalAbsractService {
    @Inject
    private CandidateProfileBO bo;

    @Override
    protected WebDataService service(final SiteDataModel site, final SubFirmProfile firmProfile, final AbstractBaseAction action, final Map<String, Object> params) throws WebOSBOException {
        PersonalInfo item = action.getModel(PersonalInfo.class);
        String profileId = XParamUtils.getString("profileId", params,"");

        bo.updatePersonalInfo(profileId,item);
        return new ObjectWebDataservice<>(item);
    }
}
