package com.inet.jobportal.service.candidate.candidate_profile.pro_skill;

import com.inet.jobportal.bo.candidate.CandidateProfileBO;
import com.inet.jobportal.service.JobPortalAbsractService;
import com.inet.xportal.nosql.web.model.SiteDataModel;
import com.inet.xportal.nosql.web.model.SubFirmProfile;
import com.inet.xportal.web.WebConstant;
import com.inet.xportal.web.action.AbstractBaseAction;
import com.inet.xportal.web.annotation.XPortalDataService;
import com.inet.xportal.web.annotation.XPortalPageRequest;
import com.inet.xportal.web.exception.WebOSBOException;
import com.inet.xportal.web.interfaces.ObjectWebDataservice;
import com.inet.xportal.web.interfaces.WebDataService;
import com.inet.xportal.web.util.SecurityUtil;
import com.inet.xportal.web.util.XParamUtils;

import javax.inject.Inject;
import javax.inject.Named;
import java.util.Map;

/**
 * Candidate Profile Professional Skill Delete DS.
 *
 * @author Duy Tan Nguyen
 * @version $Id: CandidateProfileProfessionalSkillDeleteDS.java Mar 5, 2019 11:50:48 AM nguyen_dv $
 *
 * @since 1.0
 */
@Named("jobportalcandidateprofileprofessionalskilldelete")
@XPortalDataService(description="Candidate Profile Professional Skill - Delete Data Service")
@XPortalPageRequest(uri="jobportal/candidate/profile/proskill/delete",
        //transaction = true,
        inherit = true,
        result = WebConstant.ACTION_XSTREAM_JSON_RESULT)
public class CandidateProfileProSkillDeleteDS extends JobPortalAbsractService {
    @Inject
    private CandidateProfileBO bo;

    @Override
    protected WebDataService service(final SiteDataModel site, final SubFirmProfile firmProfile, final AbstractBaseAction action, final Map<String, Object> params) throws WebOSBOException {
        String usernameParam = XParamUtils.getString("username", params, "");
        String username = SecurityUtil.getPrincipal();

        if (!usernameParam.equals(username)) {
            return new ObjectWebDataservice<>(usernameParam);
        }

        String uuid = XParamUtils.getString("profileId", params, "");
        String proSkillId = XParamUtils.getString("proSkillId", params, "");

        bo.deleteProfessionalSkill(uuid, proSkillId);
        return new ObjectWebDataservice<>(proSkillId);
    }
}
