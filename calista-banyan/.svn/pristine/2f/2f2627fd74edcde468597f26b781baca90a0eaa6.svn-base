public class EmailDeleteService extends GlbAbstraction {

    @Inject
    private GlbEmailFirmBO templateBO;

    @Override
    protected WebDataService service(final SiteDataModel site,
                                     final SubFirmProfile profile,
                                     final AbstractBaseAction action,
                                     final Map<String, Object> params) throws WebOSBOException {
        StringBuilder templateRemove = new StringBuilder(StringUtils.EMPTY_STRING);

        String templateIds = XParamUtils.getString("templateIds", params, StringUtils.EMPTY_STRING);
        String organId = getOrganId(site, profile);
        if (StringUtils.hasLength(templateIds)) {
            for (String templateId : templateIds.split(CalistaConstant.SPLIT_REGEX_CHR)) {
                final GlbEmailFirm template = templateBO.loadTemplateId(organId, templateId);
                if (template != null) {
                    templateRemove.append(template.getUuid())
                            .append(CalistaConstant.SPLIT_REGEX_CHR);
                }
            }
        }

        return new ObjectWebDataservice<>(templateRemove.toString());
    }
}
