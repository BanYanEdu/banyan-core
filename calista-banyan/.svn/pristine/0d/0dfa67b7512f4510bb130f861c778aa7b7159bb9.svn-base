package com.inet.calista.ecommerce.service.currency;

import com.inet.calista.ecommerce.ECMConstant;
import com.inet.calista.erp.ERPConstant;
import com.inet.calista.erp.masterdata.model.ERPMasterData;
import com.inet.calista.erp.masterdata.service.ERPMasterAbstraction;
import com.inet.xportal.nosql.web.data.SearchDTO;
import com.inet.xportal.nosql.web.model.SiteDataModel;
import com.inet.xportal.nosql.web.model.SubFirmProfile;
import com.inet.xportal.web.WebConstant;
import com.inet.xportal.web.action.AbstractBaseAction;
import com.inet.xportal.web.annotation.XPortalDataService;
import com.inet.xportal.web.annotation.XPortalPageRequest;
import com.inet.xportal.web.exception.WebOSBOException;
import com.inet.xportal.web.interfaces.ObjectWebDataservice;
import com.inet.xportal.web.interfaces.WebDataService;
import net.sf.json.JSONObject;

import javax.inject.Named;
import java.util.ArrayList;
import java.util.List;
import java.util.Map;

/**
 * com.inet.xportal.ecommerce.subfrmservice.currency.
 *
 * @author Phong Tran
 * @version $Id: ECMCurrencyService.java Oct 23, 2018 15:00 phongtt $
 * @since 1.0
 */
@Named("commercecurrency")
@XPortalDataService(roles = {ECMConstant.ROLE_USER}, description = ECMConstant.ROLE_USER_DESCRIPTION)
@XPortalPageRequest(uri = "commerce/currency",
        inherit = true,
        expose = 2,
        transaction = true,
        result = WebConstant.ACTION_XSTREAM_JSON_RESULT)
public class CurrencyService extends ERPMasterAbstraction {

    @Override
    protected WebDataService service(final SiteDataModel siteData,
                                     final SubFirmProfile subFirm,
                                     final AbstractBaseAction action,
                                     final Map<String, Object> params) throws WebOSBOException {
        final SearchDTO<ERPMasterData> data = masterDataList(ERPConstant.ML_CURRENCY, siteData, subFirm, action, params);

        final List<JSONObject> list = new ArrayList<>();
        JSONObject currency;

        if (data != null && data.getTotal() > 0) {
            for (ERPMasterData item : data.getItems()) {
                currency = new JSONObject();
                currency.put("code", item.getCode());
                currency.put("name", item.getName());
                currency.put("rate", item.getFltVal());
                list.add(currency);
            }
        }

        return new ObjectWebDataservice<>(new SearchDTO<>(list, list.size()));

    }
}
